<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.control.ListView?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.marcos.jplayer.HelloController" vgap="20" hgap="20">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>



    <HBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="10" alignment="BOTTOM_LEFT">

        <ImageView fx:id="cover" fitWidth="200" preserveRatio="true"/>

        <Button text="Load Song" onAction="#onHelloButtonClick"/>

        <Button text="Play/Pause" onAction="#audioPause"/>

    </HBox>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="10" alignment="CENTER">

        <ListView fx:id="songList" orientation="VERTICAL"/>



    </VBox>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="10" alignment="TOP_RIGHT">

        <Label fx:id="title"/>

        <Label fx:id="album"/>

        <Label fx:id="artist"/>

    </HBox>


</GridPane>


