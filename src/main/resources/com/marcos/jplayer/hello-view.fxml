<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.marcos.jplayer.HelloController" vgap="20" hgap="20" >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>


    <ListView fx:id="songList" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" GridPane.columnSpan="2"/>

    <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="2" >

        <GridPane hgap="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">

            <ImageView fx:id="cover" fitHeight="50" preserveRatio="true" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10" alignment="CENTER">

                <Label fx:id="title"/>

                <Label fx:id="album"/>

                <Label fx:id="artist"/>

            </HBox>

        </GridPane>


    </AnchorPane>


    <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" GridPane.halignment="CENTER">

        <GridPane hgap="10" AnchorPane.bottomAnchor="10">

            <Button text="Load Folder" onAction="#onHelloButtonClick" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.valignment="BOTTOM"/>

            <Button text="Play/Pause" onAction="#audioPause" GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.valignment="BOTTOM"/>

            <Button text="Start Song" onAction="#playSelectedSong" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.valignment="BOTTOM"/>

        </GridPane>

    </AnchorPane>


</GridPane>


